<div id="content">
    <fieldset>
        <legend>Add Movie</legend>
        <form action="/newMovie" method="post" username="movie" class="form-group">
            Name :&thinsp; <input type="text" title="Name" username="username"/><br/>
            Genre :&thinsp;<input type="text" title="Genre" username="genre"/><br/>
            Year : <input type="number" title="Year" username="year"/><br/>
            Price :<input type="number" step="0.01" title="Price" username="price"/><br/>
            <input type="submit" value="Save"/>
        </form>
    </fieldset>
    <br/>
</div>
